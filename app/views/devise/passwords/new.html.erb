<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Forgot your password</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
    <br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success text-center" %>
    </div> 
    <p class="mt-5 mb-3 text-muted">Â© 2022</p>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</section>
