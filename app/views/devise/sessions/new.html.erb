<section class="form-auth text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
   
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
    <%= f.password_field :password, autocomplete: "current-passowrd", class: "form-control", placeholder: "Password" %>

    <%= f.check_box :remember_me, class: "checkbox mb-3"%>
    <%= f.label :remember_me %>
    <br>
    
    <%= f.submit "Sign In", class: "btn btn-success text-center" %> 

    <p class="mt-5 mb-3 text-muted">Â© 2022</p>
  <% end %>
<%= render "devise/shared/links" %>
</section>
