<% if notice %>
 <div class="text-center alert alert-success alert-dismissible fade show rounded-pill" role="alert">
    <p class="notice"><%= notice %></p>
   <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>  
    </button>
 </div>
<% end %>

<% if alert %>
  <div class=" text-center alert alert-danger alert-dismissible fade show rounded-pill" role="alert" >   
    <%= alert %>   
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>  
    </button>
  </div>
<% end %>